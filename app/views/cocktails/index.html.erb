<body id="graphic">
  <div class="container">
    <div class="mt-5 header">
      <%= image_tag "cocktails_logo.png" %>
    </div>
    <div id="link-new">
      <h1> <%= link_to 'New Cocktail', new_cocktail_path %> </h1>
    </div>
    <div class="cards mt-4">
      <% @cocktails.each do |cocktail| %>
        <div class="c-card" id="card-link">
          <%= link_to cocktail_path(cocktail) do %>
          <div class="card-img" id="star-five">
            <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 250, width: 350, crop: :fill %>
            <% end %>
          </div>
          <div id="card-name">
            <h2><%= cocktail.name %></h2>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

</body>


