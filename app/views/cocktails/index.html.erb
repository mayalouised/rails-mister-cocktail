<div class="header">
  <h1>Cocktails</h1>
</div>
<div class="container">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <% if cocktail.photo.attached? %>
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <h2><%= cocktail.name %> <%= link_to 'Show', cocktail %></h2>
    </div>
  <% end %>
</div>

<%= link_to 'New Cocktail', new_cocktail_path %>



