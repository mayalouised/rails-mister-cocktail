<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </p>

  <h4>Doses</h4>
  <ul>
    <% @doses.each do |dose|  %>
      <li><%= dose.description %></li>
    <% end %>
  </ul>

  <%= link_to 'Add Doses', new_cocktail_dose_path(@cocktail) %> 
  <%= link_to 'Back', cocktails_path %> 
</div>